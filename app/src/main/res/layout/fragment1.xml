<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.View.Fragment1">

    <ImageView
        android:id="@+id/imageView_sports_academy"
        android:layout_width="wrap_content"
        android:layout_height="221dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.00"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img" />
<!--        android:layout_marginStart="-2dp"-->
<!--        android:layout_marginTop="-1dp"-->
<!--        android:layout_marginEnd="2dp"-->


    <TextView
        android:id="@+id/text_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Спорт-клуб “Академия спорта” - это не просто клуб для тренировок, это новое “место силы”, которое будет собирать самых активных. Вас ждёт огромный выбор услуг, профессиональные тренеры и новейшее оборудование"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.400"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:gravity="center">

        <Button
            android:id="@+id/sections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Наши секции"
            android:backgroundTint="@color/button_color"/>

        <Button
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Записаться на тренировку"
            android:backgroundTint="@color/button_color"/>

        <Button
            android:id="@+id/list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Список 1"
            android:backgroundTint="@color/button_color2"/>

        <Button
            android:id="@+id/list2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Список 2"
            android:backgroundTint="@color/button_color2"/>
    </LinearLayout>

